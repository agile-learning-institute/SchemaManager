{
	"description": "SchemaManager Collection Configuration",
	"type": "object",
	"required": [
		"name",
		"versions"
	],
	"properties": {
		"name": {
			"description": "The collection name",
			"type": "string"
		},
		"versions": {
			"type": "array",
			"items": {
				"description": "A version of the collection",
				"type": "object",
				"required": [
					"version"
				],
				"properties": {
					"version": {
						"description": "The Version Number",
						"type": "string"
					},
					"dropIndexes": {
						"description": "List of indexs to drop",
						"type": "array",
						"items": {
							"type": "string"
						}
					},
					"aggregations": {
						"description": "A list of migrations to run",
						"type": "array",
						"items": {
							"description": "The migration pipeline",
							"type": "object"
						}
					},
					"addIndexes": {
						"description": "List of indexes to Add",
						"type": "array",
						"items": {
							"type": "object",
							"required": [
								"keys",
								"options"
							],
							"properties": {
								"keys": {
									"description": "The index key fields",
									"type": "object"
								},
								"options": {
									"description": "The index options",
									"type": "object"
								}
							},
							"additionalProperties": false
						}
					}
				},
				"additionalProperties": false
			}
		}
	},
	"additionalProperties": false
}